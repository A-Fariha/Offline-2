<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5D3E5"
    tools:context=".CatagooryActivity">

    <TableRow
        android:id="@+id/TitleRowId"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Menu for Cake"

            >

        </TextView>

    </TableRow>

    <TableRow
        android:id="@+id/headerId"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:text="Name"
            android:textStyle="bold"
            android:layout_height="25dp"
            />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Price"
            android:layout_height="25dp"
            />

    </TableRow>
    <TableRow
        android:id="@+id/Row1Id"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="ChocolateCake"
            android:layout_height="25dp"
            />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:text="700"
            android:textStyle="bold"
            android:layout_height="25dp"
            />

    </TableRow>
    <TableRow
        android:id="@+id/Row2Id"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Black Forest Cake"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:text="1000"
            android:textStyle="bold"
            android:layout_height="25dp"
            />

    </TableRow>
    <TableRow
        android:id="@+id/Row3Id"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Red Velvate Cake"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="1200"
            android:textStyle="bold"
            android:textSize="20sp" />

    </TableRow>
    <TableRow
        android:id="@+id/Row4Id"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Cheese Cake"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:text="800"
            android:textStyle="bold"
            android:layout_height="25dp"
            />

    </TableRow>


</TableLayout>