<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatagoryyActivity">

    <ImageView
        android:id="@+id/vanillacakedoughnutImageViewId"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:src="@drawable/vanillacakedoughnut"
        android:layout_gravity="center"
        android:scaleType="fitCenter"


        />
    <ImageView
        android:id="@+id/colorfuldoughnutImageViewId"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:src="@drawable/colorfuldoughnut"
        android:layout_gravity="center"
        android:scaleType="fitCenter"


        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Click on the picture"
        />


</FrameLayout>